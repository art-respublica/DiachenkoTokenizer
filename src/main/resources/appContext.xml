<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id = "processThread" class="ru.innopolis.uni.course3.thread.ProcessThread" scope="prototype">
        <constructor-arg name="resource" ref="resource"/>
        <constructor-arg name="parser" ref="parser"/>
        <constructor-arg name="validator" ref="validator"/>
        <constructor-arg name="tokenizer" ref="tokenizer"/>
    </bean>

    <bean id = "resource" class="ru.innopolis.uni.course3.resource.FileResource" scope="singleton"/>

    <bean id = "validator" class="ru.innopolis.uni.course3.Validator" scope="singleton"/>

    <bean id = "tokenizer" class = "ru.innopolis.uni.course3.Tokenizer" scope="singleton"/>

    <bean id = "parser" class = "ru.innopolis.uni.course3.Parser" scope="singleton"/>

</beans>

